@model IEnumerable<EntitylayerCore.Concrete.Blog>

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper wrapper-content">
    <div class="row animated fadeInRight">
        <div class="col-md-4">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Blog Haqqında</h5>
                </div>
                <div>
                    @foreach (var x in Model)
				{
                    <div class="ibox-content no-padding border-left-right">
                            <img alt="image" class="img-fluid" src="@x.BlogImage" class="img-fluid" alt="" style="width:500px; height:370px;">
                    </div>
                    <div class="ibox-content profile-content">
                        <h4><strong>@x.BlogTitle</strong></h4>
@*                        <p><i class="fa fa-map-marker"></i> Riviera State 32/106</p>
*@                        <h5>
                               YÜklənmə Tarixi @(((DateTime)x.BlogDate).ToString("dd-MMM-yyyy"))
                        </h5>
                        <p>
                            @x.BlogContent                 
                            </p>
                        <div class="row m-t-lg">
                            <div class="col-md-4">
                                <span class="bar">5,3,9,6,5,9,7,3,5,2</span>
                                <h5><strong></strong> Bəyənilər</h5>
                            </div>
                            <div class="col-md-4">
                                <span class="line">5,3,9,6,5,9,7,3,5,2</span>
                                <h5><strong></strong> İzləmələr</h5>
                            </div>
                            <div class="col-md-4">
                                <span class="bar">5,3,2,-1,-3,-2,2,3,5,2</span>
                                <h5><strong></strong> Rəylər</h5>
                            </div>
                        </div>
                        <div class="user-button">
                            <div class="row">
                                <div class="col-md-6">
                                        <a href="/Admin/Blog/Delete/@x.BlogId" class="btn btn-xs btn-outline btn-danger">Sil <i class="fa fa-long-arrow-left"></i> </a>
                                    </div>
                              
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Rəylər</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#" class="dropdown-item">Config option 1</a>
                            </li>
                            <li>
                                <a href="#" class="dropdown-item">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <div>
                        @await Component.InvokeAsync("CommentListAdminBlog" , new {id = ViewBag.idadmin})
                    </div>

                </div>
            </div>


            <div class="social-feed-box">

                
                <div class="social-footer">
                    <div class="social-comment">
                        <a href="" class="float-left">
                            <img alt="image" src="@ViewBag.Adminblog">
                        </a>
                        <div class="media-body">
                            <form action="/Admin/Comment/PartialAddCommentAdmin/" method="post">
                                <input type="hidden" name="BlogId" value="@ViewBag.idadmin" />
                                <input class="form-control" type="text" name="CommentTitle" placeholder="Başlıq" required="">
                                <textarea class="form-control" name="CommentContent" placeholder="Şərhiniz..." required=""></textarea>
                                <button type="submit" class="btn btn-primary submit">Şərh Bildir</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>




        </div>
    </div>
</div>

