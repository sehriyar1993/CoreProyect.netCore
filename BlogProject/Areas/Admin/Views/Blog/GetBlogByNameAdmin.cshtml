@using EntitylayerCore.Concrete;
@model List<Blog>
@{
    ViewData["Title"] = "GetBlogByNameAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}





<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        @foreach (var x in Model)
        {
            <div class="col-md-3">
                <div class="ibox">
                    <div class="ibox-content product-box">
                        <div>
                            <img src="@x.BlogImage" height="225" width="325">
                        </div>
                        <div class="product-desc">
                            <span class="product-price">
                                @(((DateTime)x.BlogDate).ToString("dd-MMM-yyyy"))
                            </span>
                            <small class="text-muted">@x.Category.CategoryName</small>
                            <a href="/Admin/Blog/Detail/@x.BlogId" class="product-name"> @x.BlogTitle</a>

                            @if (x.BlogContent != null)
                            {
                                <div class="small m-t-xs">
                                    .                                @x.BlogContent.Substring(0,x.BlogContent.Substring(0,100).LastIndexOf(" "))...

                                </div>
                            }
                            else
                            {

                            }


                            <div class="m-t text-left">
                                <a href="/Admin/Blog/Detail/@x.BlogId" class="btn btn-xs btn-outline btn-primary">Ətraflı <i class="fa fa-long-arrow-right"></i> </a>
                                <a href="/Admin/Blog/Delete/@x.BlogId" class="btn btn-xs btn-outline btn-danger">Sil <i class="fa fa-long-arrow-left"></i> </a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>


