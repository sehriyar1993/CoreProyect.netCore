<link href="~/inspinia-gh-pages/css/animate.css" rel="stylesheet">
<link href="~/inspinia-gh-pages/css/style.css" rel="stylesheet">
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>Qısayollar</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html">Ana Səhifə</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Qısayollar</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        @await Component.InvokeAsync("Statistic1")
    </div>
    <div class="row">
        @await Component.InvokeAsync("Statistic2")
