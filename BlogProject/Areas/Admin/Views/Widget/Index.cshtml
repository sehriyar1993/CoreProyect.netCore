                    <div class="col-3">
                        <i class="fa fa-user fa-3x"></i>
                    </div>
                    <div class="col-9 text-right">
                        <span>İstifadəçi Sayı</span>
                        <h2 class="font-bold">@ViewBag.riter</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="widget style1 navy-bg">
                <div class="row vertical-align">
                    <div class="col-3">
                        <i class="fa fa-thumbs-up fa-3x"></i>
                    </div>
                    <div class="col-9 text-right">
                        <span>Blog Reytinqləri</span>

                        <h2 class="font-bold">@ViewBag.puan</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="widget style1 navy-bg">
                <div class="row vertical-align">
                    <div class="col-3">
                        <i class="fa fa-comment-o fa-3x"></i>
                    </div>
                    <div class="col-9 text-right">
                        <span>Rəylər</span>

                        <h2 class="font-bold">@ViewBag.comments</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="widget style1 lazur-bg">
                <div class="row vertical-align">
                    <div class="col-3">
                        <i class="fa fa-phone fa-3x"></i>
                    </div>
                    <div class="col-9 text-right">
                        <span>Əlaqələr</span>

                        <h2 class="font-bold">@ViewBag.contact</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="widget style1 lazur-bg">
                <div class="row vertical-align">
                    <div class="col-3">
                        <i class="fa fa-mail-reply-all fa-3x"></i>
                    </div>
                    <div class="col-9 text-right">
                        <span>Mail Blüten</span>

                        <h2 class="font-bold">@ViewBag.letter</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="widget style1 yellow-bg">
                <div class="row vertical-align">
                    <div class="col-3">
                        <i class="fa fa-shield fa-3x"></i>
                    </div>
                    <div class="col-9 text-right">
                        <span>Bildirişlər</span>

                        <h2 class="font-bold">@ViewBag.not</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            <div class="widget-head-color-box navy-bg p-lg text-center">
                <div class="m-b-md">
                    <h2 class="font-bold no-margins">
                        @ViewBag.Usernumber
                    </h2>
                    <small>Son Qeydiyyatdan Keçən</small>
                </div>
                <img src="@ViewBag.Userimage" class="rounded-circle circle-border m-b-md" alt="profile" style="width:120px; height:120px">
                <div>
                    <span>@ViewBag.UserMail</span> |
                    <span>@ViewBag.User  @ViewBag.username </span> |
@*                    <span>610 Followers</span>
*@                </div>
            </div>
            <div class="widget-text-box">
                <h4 class="media-heading">@ViewBag.User  @ViewBag.username </h4>
                <p>Yeni qeydiyatdan keçmiş yazara bir hədiyyə et</p>
                <p>Bəyən və ya yazdığı bloglara bax</p>
                <div class="text-right">
                    <a href="" class="btn btn-xs btn-white"><i class="fa fa-thumbs-up"></i> Bəyən </a>
                    <a href="" class="btn btn-xs btn-primary"><i class="fa fa-heart"></i> Bloglarına Bax</a>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="widget navy-bg p-lg text-center">
                <div class="m-b-md">
                    <i class="fa fa-shield fa-4x"></i>
                    <h1 class="m-xs">@ViewBag.message</h1>
                    <h3 class="font-bold no-margins">
                        Toplam Mesajların
                    </h3>
                    <small>sayı</small>
                </div>
            </div>
            <div class="widget  p-lg text-center">
                <div class="m-b-md">
                    <i class="fa fa-flash fa-4x"></i>
                    <h1 class="m-xs">@ViewBag.aa</h1>
                    <h3 class="font-bold no-margins">
                        Göndərilmə Vaxdı
                    </h3>
                    <small>Tarix</small>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="widget lazur-bg p-xl">

                <h2>
                    @ViewBag.adminname
                </h2>
                <ul class="list-unstyled m-t-md">
                    <li>
                        <span class="fa fa-envelope m-r-xs"></span>
                        <label>Email:</label>
                        sehrihaciyev@gmail.com
                    </li>
                    <li>
                        <span class="fa fa-home m-r-xs"></span>
                        @ViewBag.adminmail
                    </li>
                    <li>
                        <span class="fa fa-phone m-r-xs"></span>
                        <label>Əlaqə:</label>
                        (+994) 70-804-80-04
                    </li>
                </ul>

            </div>
            <div class="widget red-bg p-lg text-center">
                <div class="m-b-md">
                    <i class="fa fa-bell fa-4x"></i>
                    <h1 class="m-xs">@ViewBag.not</h1>
                    <h3 class="font-bold no-margins">
                        Bildiriş Sayı
                    </h3>
                    <small>Son Bildiriş - @ViewBag.about</small>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="widget yellow-bg p-lg text-center">
                <div class="m-b-md">
                    <i class="fa fa-thumbs-up fa-4x"></i>
                    <h1 class="m-xs">@ViewBag.puan</h1>
                    <h2 class="font-bold no-margins">
                       Reyting
                    </h2>
                    <h3>Dəyər</h3>
                </div>
            </div>
            <div class="widget yellow-bg p-lg text-center">
                <div class="m-b-md">
                    <i class="fa fa-warning fa-4x"></i>
                    <h1 class="m-xs">Xəbardarlıq</h1>
                    <h4 class="font-bold no-margins">
                       Yeni
                    </h4>
                    <small>Məlumat yoxdur</small>
                </div>
            </div>
        </div>
    </div>
    <div class="row m-t-lg">
        <div class="col-lg-6">
            <div class="ibox ">
                <div class="ibox-content">
                    @await Component.InvokeAsync("LastMessageForWidget")
                    <div class="chat-form">
                        @using (Html.BeginForm("Index", "Widget", FormMethod.Post, new { action = "/Admin/Widget/Index" }))
                        {
                            <div class="form-group">
                                <input class="form-control" type="text" name="ReceiverMail" placeholder="Email Adresi" required="">
@*                                @Html.TextBoxFor(x=>x.ReceiverMail, new {@class ="form-control"})
*@                            </div>

                            <div class="form-group">
                                <input class="form-control" type="text" name="Subject" placeholder="Başlıq" required="">

@*                                @Html.TextBoxFor(x=>x.Subject, new {@class ="form-control"})
*@                            </div>
                            <div class="form-group">
                                <textarea class="form-control" name="Body" placeholder="Şərhiniz..." required=""></textarea>

@*                                @Html.TextAreaFor(x=>x.Body, 3, 2,   new { @class ="form-control"})
*@                            </div>
                            <div class="submit text-right">
                                <button class="btn btn-style btn-primary" type="submit" id="btnsave">Rəy Bildir</button>
                            </div>
                        }
                       
                    </div>

                </div>

            </div>
        </div>
        <div class="col-lg-6">
            <div>
                <table class="table">
                    <tbody>
                        <tr>
                            <td>
                                <button type="button" class="btn btn-danger m-r-sm">@ViewBag.message</button>
                                Bütün mesajlar
                            </td>
                            <td>
                                <button type="button" class="btn btn-primary m-r-sm">@ViewBag.b</button>
                                Bloglar
                            </td>
                            <td>
                                <button type="button" class="btn btn-info m-r-sm">@ViewBag.comments</button>
                                Rəylər
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <button type="button" class="btn btn-info m-r-sm">@ViewBag.not</button>
                                Bildirişlər
                            </td>
                            <td>
                                <button type="button" class="btn btn-success m-r-sm">@ViewBag.contact</button>
                                Əlaqələr
                            </td>
                            <td>
                                <button type="button" class="btn btn-danger m-r-sm">@ViewBag.not</button>
                                Bildirişlər
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <button type="button" class="btn btn-warning m-r-sm">@ViewBag.riter</button>
                                İstifadəçilər
                            </td>
                            <td>
                                <button type="button" class="btn btn-default m-r-sm">1</button>
                                Admin
                            </td>
                            <td>
                                <button type="button" class="btn btn-warning m-r-sm">30</button>
                                Rollar
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="ibox-content text-center">
                            <h1>@ViewBag.adminname</h1>
                            <div class="m-b-sm">
                                <img alt="image" class="rounded-circle" src="@ViewBag.admi" style="width:100px; height:100px">
                            </div>
                            <p class="font-bold">@ViewBag.adminmail</p>

                            <div class="text-center">
                                <a href="" class="btn btn-xs btn-white"><i class="fa fa-thumbs-up"></i> Bəyən </a>
                                <a href="" class="btn btn-xs btn-primary"><i class="fa fa-heart"></i> İzlə</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="ibox-content">
                            <div>
                                <div>
                                    <span>Memory</span>
                                    <small class="float-right">10/200 GB</small>
                                </div>
                                <div class="progress progress-small">
                                    <div style="width: 60%;" class="progress-bar"></div>
                                </div>

                                <div>
                                    <span>Bandwidth</span>
                                    <small class="float-right">20 GB</small>
                                </div>
                                <div class="progress progress-small">
                                    <div style="width: 50%;" class="progress-bar"></div>
                                </div>

                                <div>
                                    <span>Activity</span>
                                    <small class="float-right">73%</small>
                                </div>
                                <div class="progress progress-small">
                                    <div style="width: 40%;" class="progress-bar"></div>
                                </div>

                                <div>
                                    <span>FTP</span>
                                    <small class="float-right">400 GB</small>
                                </div>
                                <div class="progress progress-small">
                                    <div style="width: 20%;" class="progress-bar progress-bar-danger"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
   

</div>
<script src="~/inspinia-gh-pages/js/jquery-3.1.1.min.js"></script>
<script src="~/inspinia-gh-pages/js/popper.min.js"></script>
<script src="~/inspinia-gh-pages/js/bootstrap.js"></script>
<script src="~/inspinia-gh-pages/js/plugins/metisMenu/jquery.metisMenu.js"></script>
