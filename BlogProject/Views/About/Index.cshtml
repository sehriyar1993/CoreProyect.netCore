@using EntitylayerCore.Concrete
@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}


<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Haqqımızda</h3>
		<div class="row inner-sec">
			<!--left-->
			<div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
				<div class="blog-grid-top">
					@foreach(var x in Model)
					{
						
					
					<div class="blog_info_left_grid">
						<a href="single.html">
							<img src="@x.AboutImage1" class="img-fluid" alt="">
						</a>
					</div>
					<h3>
						@x.AboutDetails1
					</h3>
					<p>
			            @x.AboutDetails2
					</p>
					}
				</div>
				
			</div>
			<!--//left-->
			<!--right-->
			<aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
				<div class="right-blog-info text-left">
					<div class="tech-btm">
						<img src="~/web/images/banner1.jpg" class="img-fluid" alt="">
					</div>
					<div class="tech-btm">
						<h4>Yeniliklərdən Xəbarda ol</h4>
						<p>Mail Adresinizlə Abunə olun</p>
						<form action="/Newletter/SubscribeMail/" method="post">
							<input type="email" placeholder="Email" name="Mail" required="">
							<input type="submit" value="Abunə Olun">
						</form>

					</div>
					<div class="tech-btm widget_social">
						<h4>Sosial Medya Hesabları</h4>
						<ul>

							<li>
								<a class="twitter" href="#">
									<i class="fab fa-twitter"></i>
									<span class="count">317K</span> Twitter İzləyiciləri
								</a>
							</li>
							<li>
								<a class="facebook" href="#">
									<i class="fab fa-facebook-f"></i>
									<span class="count">218k</span> Twitter İzləyiciləri
								</a>
							</li>
							<li>
								<a class="dribble" href="#">
									<i class="fab fa-dribbble"></i>

									<span class="count">215k</span> Dribble İzləyiciləri
								</a>
							</li>
							<li>
								<a class="pin" href="#">
									<i class="fab fa-pinterest"></i>
									<span class="count">190k</span> Pinterest İzləyiciləri
								</a>
							</li>

						</ul>
					</div>
					@await Component.InvokeAsync("BlogLast3")
				</div>

			</aside>
			<!--//right-->
		</div>
	</div>
</section>
