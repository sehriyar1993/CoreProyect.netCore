@model AppUserImage

@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}
<script src="~/lib/jquery/dist/jquery.js"></script>

<form class="forms-group method="post" asp-action="WriterAdd" asp-asp-controller="Writer" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Profil Əlavə et</h4>
                <div class="forms-sample">

                    <div class="form-group">
                        <label for="exampleInputName1">İstifadəçi Adı</label>
                        @Html.TextBoxFor(x=>x.username, new {@class ="form-control"})
                        @Html.ValidationMessageFor(x=>x.username,"", new { @class = "text-danger"})

                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1"> Ad</label>
                        @Html.TextBoxFor(x=>x.name, new {@class ="form-control"})
                        @Html.ValidationMessageFor(x=>x.name,"", new { @class = "text-danger"})

                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Soyad</label>
                        @Html.TextBoxFor(x=>x.surname, new {@class ="form-control"})
                        @Html.ValidationMessageFor(x=>x.surname,"", new { @class = "text-danger"})

                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Mail adresi</label>
                        @Html.TextBoxFor(x=>x.mail, new {@class ="form-control"})
                        @Html.ValidationMessageFor(x=>x.mail ,"", new { @class = "text-danger"})

                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Telefon</label>
                        @Html.TextBoxFor(x=>x.phonenumber, new { @class ="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Parol</label>
                        @Html.PasswordFor(x=>x.password, new { @class ="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Haqqında</label>
                        @Html.TextAreaFor(x=>x.about, 15, 5,   new { @class ="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Şəkil Yüklə</label>
                        <input type="file" name="Image" />
                      
                    </div>
                    <button type="submit" id="btn1" class="btn btn-gradient-primary mr-2">Təsdiqlə</button>
                    <button class="btn btn-light">Ləğv Et</button>
                </div>
            </div>
        </div>
    </div>
</form>

<script>
    $('#btn1').click(function () {
        Swal.fire('Yeni Profil Əlavə Edildi');
    });
</script>
<script src="
https://cdn.jsdelivr.net/npm/sweetalert2@11.7.11/dist/sweetalert2.all.min.js
"></script>
<link href="
https://cdn.jsdelivr.net/npm/sweetalert2@11.7.11/dist/sweetalert2.min.css
" rel="stylesheet">






