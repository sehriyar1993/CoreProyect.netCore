@using EntitylayerCore.Concrete
@model List<Blog>
<div class="tech-btm">
	<h4>Yazarın digər postları</h4>
	@foreach(var x in Model)
	{
		<div class="blog-grids row mb-3">
			<div class="col-md-5 blog-grid-left">
				<a href="single.html">
					<img src="@x.BlogImage" class="img-fluid" alt="">
				</a>
			</div>
			<div class="col-md-7 blog-grid-right">

				<h5>
					<a href="single.html">@x.BlogTitle </a>
				</h5>
				<div class="sub-meta">
					<span>
						<i class="far fa-clock"></i> @(((DateTime)x.BlogDate).ToString("dd-MMM-yyyy"))
				</div>
			</div>

		</div>

	}
</div>
