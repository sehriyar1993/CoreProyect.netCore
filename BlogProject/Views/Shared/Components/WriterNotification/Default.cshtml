@using EntitylayerCore.Concrete;
@model List<Notification>
<li class="nav-item dropdown">
    <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-toggle="dropdown">
        <i class="mdi mdi-bell-outline"></i>
        <span class="count-symbol bg-danger"></span>
    </a>
    <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
        <h6 class="p-3 mb-0">Bildirimlər</h6>
        @foreach(var item in Model.Where(x=>x.NotificationStatus == true).OrderByDescending(x=>x.NotificationID).Take(5))
        {
            <div class="dropdown-divider"></div>
            <a class="dropdown-item preview-item">
                <div class="preview-thumbnail">
                    <div class="preview-icon bg-@*@item.NotificationColor*@">
                        <i class="mdi mdi-@item.NotificationSembol"></i>
                    </div>
                </div>
                <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                    <h6 class="preview-subject font-weight-normal mb-1">@item.NotificationType:  @(((DateTime)item.NotificationDate).ToString("dd-MM-yyyy"))</h6>
                    <p class="text-gray ellipsis mb-0"> @item.NotificationDetails </p>
                </div>
            </a>
        }
      
        <h6 class="p-3 mb-0 text-center">Bütün Bildirimlərə Bax</h6>
    </div>
</li>
