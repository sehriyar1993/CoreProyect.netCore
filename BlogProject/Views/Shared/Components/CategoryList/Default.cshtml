@model IEnumerable<EntitylayerCore.Concrete.Category>

<div class="tech-btm">
	<h4>Kateqoriyalar</h4>
	<ul class="list-group single">
		@foreach (var x in Model.Where(x => x.CategoryStatus == true).OrderByDescending(x => x.CategoryID).Take(5))
		{
			<li class="list-group-item d-flex justify-content-between align-items-center">
				@x.CategoryName
				<span class="badge badge-primary badge-pill">0</span>
			</li>
		}
		
	</ul>
</div>
